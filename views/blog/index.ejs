<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="/css/blog/style.css">
  <title>Blog</title>
</head>
<body>
  <%-include("partials/navbar.ejs") %>

  <header>
    <div class="header-text">
      <h1>You Write, We Read</h1>
      <p>Here you can find all the posts</p>
    </div>
  </header>

  <main>
    <div class="container">
      <% if (posts?.length <= 0) {%>
        <p>No posts found</p>
      <% } else { %>
      <% posts.forEach(post => { %>
          <div class="post">
            <h2><%= post.title %></h2>
            <p><%= post.content.substring(0,200) %> <% if (post.content.substring(0,200).length === 200) { %>
              ......
            <% } %></p>
            <a href="/blog/post/<%= post.id %>">Read More</a>
          </div>
      <% }) %>
      <% } %>
    </div>
</body>
